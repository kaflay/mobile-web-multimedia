@page
@model IndexModel
@inject UserManager<User> UserManager
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
    Layout = "~/Views/Shared/Admin.cshtml";
}

    <div class="container px-5">
        <div class="pt-2 mt-2 w-100">
            <div class="tab-content">
                <div class="tab-pane fade in active show" id="home-dashboard">
                        @if(TempData["Message"] != null)
        {
                    
            <div class="alert alert-success alert-dismissible fade show d-block mt-3 px-2" role="alert">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-circle-fill" viewBox="0 0 16 16">
                    <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
                </svg>
                <strong>@TempData["Message"]</strong>
                    <button type="button" class="close text-white" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                        
            </div>
        }
                    <div id="dashboard-content">
                        <div class="description-content my-2">
                            <h2 class="font-weight-bold text-uppercase text-center">Profile</h2>
                        </div>
                        <div class="container my-2">
                            <form id="profile-form" method="post" enctype="multipart/form-data">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="user-avatar d-flex justify-content-center">
                                    @if (Model.Input.Image != null)
                                    {
                                        <img class="d-block rounded-circle" id="image" alt="profile picture" src="data:user/*;base64,@(Convert.ToBase64String(Model.Input.Image))" width="200"/>
                                    }
                                    else
                                    {
                                        <img class="d-block rounded-circle" id="image" alt="profile" src="~/users/user.png" width="200" />
                                    }  
                                </div>
                                <div class="file-upload d-flex justify-content-center">
                                    <input type="file" accept="user/*" asp-for="Input.Image" onchange="document.getElementById('image').src=window.URL.createObjectURL(this.files[0])" name="image" id="image">
                                    <span asp-validation-for="Input.Image" class="text-danger"></span>
                                </div>
                                <div class="user-form px-3 pb-3 mt-3">
                                    <div class="row">
                                        <div class="col-12 col-sm-12 col-lg-6 col-md-6 mb-2">
                                            <label asp-for="Input.Name"></label>
                                            <input asp-for="Input.Name" type="text" class="form-control">
                                        </div>
                                            <div class="col-12 col-sm-12 col-lg-6 col-md-6 mb-2">
                                            <label asp-for="Input.Address"></label>
                                            <input asp-for="Input.Address" type="text" class="form-control" >
                                        </div>
                                        <div class="col-12 col-sm-12 col-lg-6 col-md-6 mb-2">
                                            <label asp-for="Input.PhoneNumber"></label>
                                            <input asp-for="Input.PhoneNumber" type="tel" class="form-control">
                                        </div>
                                        <div class="col-12 col-sm-12 col-lg-6 col-md-6 mb-2">
                                            <label for="email">Username</label>
                                            <input asp-for="Username" type="text" class="form-control">
                                        </div>
                                    </div>
                                    <button id="update-profile-button" type="submit" class="btn btn-primary mt-3">Save</button>
                                    <input type="submit" value="Cancel" class="btn btn-secondary mt-3 ml-3">
                    
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

        </div> 
    </div>



                   
                

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
       


}
