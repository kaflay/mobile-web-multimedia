@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

 <!-- start banner Area -->
        <section class="relative about-banner">
            <div class="overlay overlay-bg"></div>
            <div class="container">
                <div class="row d-flex align-items-center justify-content-center">
                    <div class="about-content col-lg-12 bannerh1">
                        <h1 class="text-white bannerh1">
                            Login
                        </h1>
                        <p  class="text-white link-nav"><a style="color:#fff;" href="index.html">Home </a> 
                            <i class="fas fa-arrow-right"></i></span> <a style="color:#fff;" href="/Identity/Account/Login"> Login</a></p>
                    </div>
                </div>
            </div>
        </section>
        <section  style=" background: url(Assets/images/price-bg.png);" class="price area">
            <div class="container py-5 h-100">
              <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col col-xl-10">
                  <div class="card" style="border-radius: 1rem;">
                    <div class="row g-0">
                      <div class="col-md-6 col-lg-5 d-none d-md-block">
                        <img style="object-fit:cover; height:100%;" src="~/images/login-banner.jpg"
                          alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
                      </div>
                      <div class="col-md-6 col-lg-7 d-flex align-items-center">
                        <div class="card-body p-4 p-lg-5 text-black">
          
                          <form id="account" method="post">
          
                            <div class="d-flex align-items-center mb-3 pb-1">
                              <a class="navbar-brand" href="#">
                                <img src="~/images/logo.png" class="img-fluid logo" alt="">
                              </a>
                            </div>
          
                            <h5 class="mb-3 pb-3" style="letter-spacing: 1px;">Sign into your account</h5>
          
                            <div class="form-floating mb-3">
                                <label asp-for="Input.Email" class="form-label"></label>
                                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-3">
                                <label asp-for="Input.Password" class="form-label"></label>
                                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div class="checkbox d-flex justify-content-between mb-3">
                                <label asp-for="Input.RememberMe" class="form-label">
                                    <input class="form-check-input" asp-for="Input.RememberMe" />
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                                <a id="forgot-password" asp-page="./ForgotPassword" class="small">Forgot password?</a>
                             </div>

                            <div class="pt-1 mb-4">
                              <input class="primary-btn" value="Login" type="submit">
                            </div>
                            <div class="register text-center">
                              Dont' have an account<a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl"> Register Here</a>
                            </div>
                          </form>
          
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
        </section>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
